mixin course(id)
  a.lesson-plan(href="/course/" + id style="background: #" + courses[id].color)
    .lesson-plan-img(style="background-image: url(/resources/" + id + "/hero.jpg)")
    h2= courses[id].title
    p= courses[id].description
    p #{courses[id].grade} &nbsp;•&nbsp; #{courses[id].time}


doctype html
html
  head
    meta(charset="utf-8")
    title Mathigon Development Server
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,300,400italic', rel='stylesheet', type='text/css')
    link(href='/course.css', rel='stylesheet')
    link(href='/tropicsu.css', rel='stylesheet')

  body
    header
      a#logo(href="/")
        include images/logo.svg

    .hero
      .hero-shadow
      .container: .hero-title
        h1 Learn about Climate Change

    .container
      .row
        +course('co2-calculus')
        +course('human-health')
        +course('tragedy-of-commons')
        +course('microbial-life')
        +course('phenology')

    .container
      footer.global-footer
        .footer-left
          a(href='https://council.science/') International Science Council
          span.dot •
          a(href='https://imaginary.org/') Imaginary
          span.dot •
          a(href='https://mathigon.org') Mathigon
        .footer-right © TROP ICSO
